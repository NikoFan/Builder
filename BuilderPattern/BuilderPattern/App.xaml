<Application
    x:Class="BuilderPattern.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BuilderPattern"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--  Стиль для шапки приложения {grid}  -->
        <Style x:Key="applicationHeadPlace_style" TargetType="Grid">
            <Setter Property="Height" Value="100" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="Purple" />
        </Style>

        <!--  Стиль для кнопки Создать {button}  -->
        <Style x:Key="buildButton_style" TargetType="Button">
            <Setter Property="Height" Value="80"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Background" Value="Green"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>
