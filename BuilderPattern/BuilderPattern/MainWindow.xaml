<Window
    x:Class="BuilderPattern.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BuilderPattern"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="600"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="Head" Style="{StaticResource applicationHeadPlace_style}">
            <Button
                x:Name="buildBottom"
                Margin="0,0,300,0"
                Click="buildObject"
                Content="Создать"
                Style="{StaticResource buildButton_style}" />
            <Button
                x:Name="buildTop"
                Margin="300,0,0,0"
                Click="buildObject"
                Content="Создать"
                Style="{StaticResource buildButton_style}" />
        </Grid>
        <Grid
            x:Name="Body"
            Height="320"
            VerticalAlignment="Bottom" />
    </Grid>
</Window>
